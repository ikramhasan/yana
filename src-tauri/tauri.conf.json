{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "yana",
  "version": "0.1.5",
  "identifier": "com.ikramhasan.yana",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "yana",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {}
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ikramhasan/yana/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdEMkFEMDVGMkY0MjgwODkKUldTSmdFSXZYOUFxZlpxRGxwSm8zN0RLSjdYSWVNRWRka3QxZmlxWkRsWTBzYlViWGZ1VzlxSU8K"
    }
  }
}
